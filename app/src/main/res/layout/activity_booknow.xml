<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".BooknowActivity"
    android:background="@drawable/feedbackbackgroundui"



    >

    <RelativeLayout

        android:layout_width="340dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectanglebackground"

        >




        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Confirmation"
            android:textSize="34sp"
            android:textColor="@color/navyBlue"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginTop="32dp"
            android:textColor="@color/navyBlue"

            android:text="Username:"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewUsername"
            android:layout_below="@id/textViewTitle"
            android:layout_marginStart="45dp"
            android:background="@drawable/rounded_textview"

            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextUsername"
            android:layout_marginTop="16dp"
            android:textColor="@color/navyBlue"

            android:text="Phone Number:"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewPhoneNumber"
            android:layout_below="@id/editTextUsername"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_textview"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhoneNumber"
            android:layout_marginTop="16dp"
            android:textColor="@color/navyBlue"

            android:text="Email Address:"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewEmail"
            android:layout_below="@id/editTextPhoneNumber"
            android:layout_marginStart="15dp"
            android:background="@drawable/rounded_textview"

            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/textViewDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextEmail"
            android:layout_marginTop="16dp"
            android:textColor="@color/navyBlue"

            android:text="Destination:"
            android:textSize="18sp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextDestination"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewDestination"
            android:layout_below="@id/editTextEmail"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_textview"

            android:inputType="text"/>

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDestination"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/feedbackround"
            android:textColor="@color/white"

            android:text="Confirm"/>
    </RelativeLayout>

    </RelativeLayout>




<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="30dp"
        android:background="@drawable/rectanglebackground"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sellerName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:text="Seller Name"
                android:textSize="20sp"
                android:textColor="@color/navyBlue"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/sellerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushant Dhakal"
                android:textColor="@color/navyBlue"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/sellerName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.70"
                app:layout_constraintStart_toEndOf="@id/sellerName"
                app:layout_constraintTop_toTopOf="@id/sellerName"
                >


            </TextView>

            <TextView
                android:id="@+id/bookName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:text="Book Name"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/navyBlue"

                app:layout_constraintTop_toBottomOf="@id/sellerName">

            </TextView>

            <TextView
                android:id="@+id/bookNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amamzon"
                android:textColor="@color/navyBlue"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/bookName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintStart_toEndOf="@id/bookName"
                app:layout_constraintTop_toBottomOf="@id/sellerName"
                >

            </TextView>

            <TextView
                android:id="@+id/address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:text="Address"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/navyBlue"

                app:layout_constraintTop_toBottomOf="@id/bookName">

            </TextView>

            <TextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toronto,ON"
                android:textColor="@color/navyBlue"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toEndOf="@id/address"
                app:layout_constraintTop_toBottomOf="@id/bookName"
                app:layout_constraintVertical_bias="1.0">

            </TextView>

            <TextView
                android:id="@+id/condition"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:text="Condition"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/navyBlue"

                app:layout_constraintTop_toBottomOf="@id/address">


            </TextView>


            <TextView
                android:id="@+id/hydroText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:textColor="@color/navyBlue"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/condition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintStart_toEndOf="@id/condition"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintVertical_bias="1.0">

            </TextView>

            <TextView
                android:id="@+id/price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:text="Price"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/navyBlue"

                app:layout_constraintTop_toBottomOf="@id/condition">

            </TextView>

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAD 20"
                android:textColor="@color/navyBlue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.349"
                app:layout_constraintStart_toEndOf="@id/price"
                app:layout_constraintTop_toBottomOf="@id/condition"
                app:layout_constraintVertical_bias="0.0">

            </TextView>

            <TextView
                android:id="@+id/detailBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:text="Details"
                 android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/navyBlue"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price" />

            <TextView
                android:id="@+id/detailsText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="This book is about selling the items\nusing amazon. This book is in excellent condition"
                android:textColor="@color/navyBlue"
                android:textSize="18sp"
android:fontFamily="serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailBook" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="84dp"
                android:background="@color/navyBlue"
                android:text="Buy"
                android:textColor="@color/white"


                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsText">

            </Button>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
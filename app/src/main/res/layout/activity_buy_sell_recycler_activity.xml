<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="BuySell.BuysellRecyclerActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buySellRecyclerActivityId"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <androidx.appcompat.widget.SearchView
               android:id="@+id/searchBar"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_margin="10dp"
               app:queryHint="Search here.."
               android:background="@drawable/rounded_textview"
               app:layout_constraintTop_toBottomOf="@id/profileView"
               app:iconifiedByDefault="false"


               >

           </androidx.appcompat.widget.SearchView>

            <TextView
                android:id="@+id/helloUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello, User"
                android:textColor="@color/navyBlue"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/searchBar"
                app:layout_constraintStart_toStartOf="parent">

            </TextView>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profileView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/navyBlue"
                android:background="@drawable/baseline_person_24_blue"
                app:riv_corner_radius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/searchBar"

                >

            </com.makeramen.roundedimageview.RoundedImageView>

            <ImageView
                android:id="@+id/backNow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintBottom_toTopOf="@+id/helloUser"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buySellRecyclerActivityId"
        android:layout_width="409dp"
        android:layout_height="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"

        />



</androidx.constraintlayout.widget.ConstraintLayout>